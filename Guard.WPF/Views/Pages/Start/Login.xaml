<Page
    x:Class="Guard.WPF.Views.Pages.Start.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Guard.WPF.Views.Pages.Start"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Login"
    d:Background="White"
    d:DesignHeight="700"
    d:DesignWidth="1150"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <svgc:SvgViewbox
                x:Name="HeaderLogo"
                Width="200"
                Margin="0,45,0,0"
                HorizontalAlignment="Center"
                Source="pack://application:,,,/Assets/logo.svg" />
            <ui:TextBlock
                x:Name="HeaderTitle"
                Margin="0,20,0,0"
                FontSize="32"
                FontWeight="SemiBold"
                Text="{DynamicResource i.title}"
                TextAlignment="Center" />
            <ui:TextBlock
                x:Name="HeaderSubtitle"
                MaxWidth="400"
                Margin="0,20,0,30"
                FontSize="15"
                Text="{DynamicResource i.login.subtext}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <ui:PasswordBox
                x:Name="PasswordBox"
                Width="320"
                Icon="{ui:SymbolIcon Password24}"
                PlaceholderEnabled="True"
                PlaceholderText="{DynamicResource i.login.passbox}" />
            <ui:Button
                x:Name="LoginButton"
                Margin="0,22,0,0"
                HorizontalAlignment="Center"
                Appearance="Primary"
                Click="LoginButton_Click"
                Content="{DynamicResource i.login.button}"
                Icon="{ui:SymbolIcon ArrowCircleRight24,
                                     Filled=True}"
                IsDefault="True" />
            <ui:Button
                x:Name="WinHelloButton"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Click="WinHelloButton_Click"
                Content="{DynamicResource i.login.winhellobutton}"
                Icon="{ui:SymbolIcon FingerPrint24,
                                     Filled=True}" />
            <ui:Button
                x:Name="WebAuthnBtn"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Click="WebAuthnBtn_Click"
                Content="{DynamicResource i.login.webauthn}"
                Icon="{ui:SymbolIcon UsbStick24}" />
            <ui:InfoBar
                x:Name="InfoBar"
                Margin="0,20,0,0"
                IsOpen="False" />
            <ProgressBar
                x:Name="LoginProgressBar"
                Margin="0,5,0,0"
                IsIndeterminate="True"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Page>
